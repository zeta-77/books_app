<h1><%= t('.reports') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.content') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= link_to t('.show'), report %></td>
        <td><%= link_to t('.edit'), edit_report_path(report) %></td>
        <td><%= link_to t('.destroy'), report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_report'), new_report_path %>

<br>

<%= link_to t('.books'), books_path %>

<%= render 'shared/link' %>
