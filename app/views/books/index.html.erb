<p id="notice"><%= notice %></p>

<h1><%= t('views.books.index.books') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('views.books.index.title') %></th>
      <th><%= t('views.books.index.memo') %></th>
      <th><%= t('views.books.index.author') %></th>
      <th><%= t('views.books.index.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('views.books.index.show'), book %></td>
        <td><%= link_to t('views.books.index.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('views.books.index.destroy'), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('views.books.index.new_book'), new_book_path %>
