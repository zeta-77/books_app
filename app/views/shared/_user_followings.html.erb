<table>
  <thead>
    <tr>
      <th>id</th>
      <th>email</th>
    </tr>
  </thead>

  <tbody class="users">
    <% following_users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.email, user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
